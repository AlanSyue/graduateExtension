{
  "manifest_version": 2,
  "name": "畢業學分計算工具 | 長庚大學醫管系",
  "description": "長庚大學計算畢業學分小工具",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://graduate-tool.herokuapp.com/*",
    "http://127.0.0.1:5000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://ep.cgu.edu.tw/webfolio/*"
      ],
      "js": [
        "execute.js"
      ]
    }
  ]
}